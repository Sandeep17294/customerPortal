<?xml version="1.0" encoding="utf-8"?>
<faces-config version="2.0"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<name>primefaces_harmony</name>
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>ar</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>language.language</base-name>
			<var>msg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>language.message</base-name>
			<var>txt</var>
		</resource-bundle>
	</application>

	<component>
		<component-type>org.primefaces.component.HarmonyMenu</component-type>
		<component-class>com.aetins.customerportal.core.primefaces.component.menu.Menu</component-class>
	</component>

	<render-kit>
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.HarmonyMenuRenderer</renderer-type>
			<renderer-class>com.aetins.customerportal.core.primefaces.component.menu.MenuRenderer</renderer-class>
		</renderer>
	</render-kit>
</faces-config>